#include <cstdlib>
#include <ctime>
#include <iostream>

using namespace std;

int randRange(int low, int high) {
	return (rand() % (high - low) + low);
}

void coinFlip() {
	int headsOrTails = randRange(0, 2);
	if (headsOrTails)
		cout << headsOrTails << " = heads" << endl;
	else
		cout << headsOrTails << " = tails" << endl;
}

void highLow() {
	int myNum = randRange(1, 101);
	int userNum;
	cout << "Pick a number.\n";
	cin >> userNum;

	
}
int main() {
	srand(time(NULL));
	for (int i = 0; i < 50; i++) {
		coinFlip();
	}
	cin.get();
	return 0;
}
